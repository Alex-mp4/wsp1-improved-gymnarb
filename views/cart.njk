{% extends "layout.njk" %}
{% block  content %}
{% for row in rows %}
<a href="/product/{{ row.id }}">
<div class="cartcontainer display">
    <img src="/images/covers/{{ row.cover }}">
    <div>
    <strong class="item2">{{ row.name }} - {{ row.artist }}</strong><br>
    {% if row.sale > 0 %}
        <span class="moneysale">{{ row.price *  (1-(0.01 * row.sale)) }} kr</span>
        <span class="moneyold">{{ row.price }} kr</span>
        {% else %}
        <span class="money">{{ row.price }} kr</span>
    {% endif %}
    </div>
    <div class="buybutton">
        <form action="cart" method="POST" class="item5">
            <input type="text" name="productid" value="{{ row.id }}">
            <button type="submit" class="productbutton">BUY
                <!--{% if row.sale > 0 %}
                    <span class="productsale">50%</span>
                {% endif %}-->
            </button>
        </form>
    </div>
</div>
</a>
{% endfor %}
<div class="buyallbutton">
    <form action="cart" method="POST" class="item5">
        <input type="text" name="allbuy">
        <button type="submit" class="productbutton">BUY CART
            <!--{% if row.sale > 0 %}
                <span class="productsale">50%</span>
            {% endif %}-->
        </button>
    </form>
</div>
{% endblock %}